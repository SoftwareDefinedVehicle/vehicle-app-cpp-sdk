					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^You're up and running! Dapr logs will appear here.",
					"endsPattern": "."
				}
			}
		},
		{
			"label": "Start VehicleApp runtime",
			"dependsOn": [
				"ensure-dapr",
				"run-mosquitto",
				"run-vehicledatabroker",
				"run-seatservice",
				"run-feedercan"
			],
			"dependsOrder": "sequence",
			"problemMatcher": [ ]
		},
		{
			"label": "SeatAdjuster (Dapr run)",
			"type": "shell",
			"command": [
				"dapr run",
				"--app-id seatadjuster",
				"--app-protocol grpc",
				"--config ./.dapr/config.yaml",
				"--components-path ./.dapr/components",
				"./build/bin/example-seatadjusterapp"
			],
			"group": "none",
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^You're up and running! Both Dapr and your app logs will appear here.",
					"endsPattern": "."
				}
			}
		},
		// CPP specific tasks
		{
			"label": "CPP - Calculate code coverage",
